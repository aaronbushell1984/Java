package com.fdmgroup.ood.collections;

import java.util.Arrays;

public class ArrayDemo {

	public static void main(String[] args) {
		
		// Empty Array
		int[] intArray = new int[10];
		int arrayLength = intArray.length;
		
		// Zero indexed ArrayIndexOutOfBoundException
		// intArray[10] = 10;
		
		
		// use Array object to use convert to string method to avoid printing the refernce rather that contents
		intArray[0] = 1;
		intArray[9] = 10;
		System.out.println(Arrays.toString(intArray));
		
		String[] cars = {"Ford", "Jaguar", "BMW"};
		System.out.println(Arrays.toString(cars));
		Arrays.sort(cars);
		System.out.println(Arrays.toString(cars));

	}

}
